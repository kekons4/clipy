{
    "manifest_version": 3,
    "name": "Clipy",
    "version": "1.6.3",
    "description": "Clipy makes it easy to keep everything you want to copy and paste all in one extension.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Clipy"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "permissions": [
        "contextMenus",
        "storage",
        "sidePanel",
        "clipboardWrite",
        "scripting",
        "activeTab"
    ],
    "icons": {
        "16": "clipy128.png",
        "48": "clipy128.png",
        "128": "clipy128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"]
        }
    ],
    "commands": {
        "copy-text-to-clipy": {
            "suggested_key": {
                "default": "Ctrl+C",
                "mac": "Command+C"
            },
            "description": "When user does Crtl+C it will automatically copy to Clipy too"
        }
    },
    "background": {
        "service_worker": "eventPage.js"
    }
}
